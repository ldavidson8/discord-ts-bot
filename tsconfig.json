{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext",
      "WebWorker"
    ],
    "module": "NodeNext",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "noUncheckedIndexedAccess": true,
  },
  "exclude": [
    "dist/",
    "node_modules/",
    ".vscode/"
  ],
  "include": [
    "src/**/*"
  ]
}